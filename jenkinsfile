pipeline {
    agent any

    stages {
        stage('Build') {
            agent{
                docker{
                    image 'node:22.14.0-alpine'
                    resuseNode true
                }
            }
            steps {
                sh '''
                     ls -la
                      node --version
                      npm --version
                      npm install
                      nom run build
                      ls -la 

                '''
            }
        }
    }
}
